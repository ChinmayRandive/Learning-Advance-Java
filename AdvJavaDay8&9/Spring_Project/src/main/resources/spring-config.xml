<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"	
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean class="example.spring.core.WelcomeService" id="myBean"/>
    
      <bean class="example.spring.core.UserService" id="userBean">
      <property name="name" value = "James"/>
      <property  name="age" value = "70"/>
      </bean>
      
      <bean class="example.spring.core.UserService" id="userBean2">
      <constructor-arg value = "maria" /> 
      <constructor-arg value = "25" /> 
      </bean>
      
       <bean class="example.spring.core.UserService" id="userBean3">
      <constructor-arg value = "Surbhi" index = "1"/> 
      <constructor-arg value = "40" index = "0"/> 
      </bean>
   
   
</beans>